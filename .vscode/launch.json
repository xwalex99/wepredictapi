{
  // Launch configuration for NestJS (runs src/main.ts with ts-node).
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "NestJS: Launch",
      "runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
      "args": ["${workspaceFolder}/src/main.ts"],
      "cwd": "${workspaceFolder}",
      "env": {
        // Define your envs or use a .env file loaded by ConfigModule
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "outputCapture": "std",
      "restart": true,
      "autoAttachChildProcesses": true
    }
  ]
}